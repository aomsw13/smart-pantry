<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/giver_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="You can now start give \n items to others!!"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="20dp"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/pantry_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="100dp"
                    android:text="Your selected pantry ID : "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/pantry_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:layout_marginTop="100dp"
                    android:text="@string/pantry_id_description"
                    android:textColor="#000000"
                    android:textSize="20sp"

                    />


            </RelativeLayout>

            <Button
                android:id="@+id/signout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sign out"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="150dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>